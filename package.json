{
  "name": "pothe-pwa",
  "private": true,
  "version": "0.0.14",
  "type": "module",
  "homepage": "https://frankRamBau.github.io/pothe-pwa",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:full": "npm run build && npm run deploy",
    "clean-cache": "rm -rf node_modules/.cache && rm -rf dist",
    "build:clean": "npm run clean-cache && npm run build",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "update-version": "node scripts/update-version.js",
    "deploy:versioned": "npm run version:patch && npm run update-version && npm run deploy:full",
    "test:pwa": "npm run build && npm run preview"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "framer-motion": "^12.19.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.523.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-head": "^3.4.2",
    "react-router-dom": "^7.6.2",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.2.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0"
  }
}
